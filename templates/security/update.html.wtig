{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Modifier vôtre compte
{% endblock %}

{% block body %}
    <h1 class="mt-5">Modifier vôtre compte</h1>

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.roles) }}

    <button class="btn btn-primary" type="submit">Valider</button>
    {{ form_end(form) }}

{% endblock %}