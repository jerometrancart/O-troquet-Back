{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.username }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <td><img src="{{ asset('uploads/avatars/'~ user.avatar) }}" width="70" height="70" class="d-inline-block align-top"></td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>

            {% if ("ROLE_ADMIN" in user.roles ? user.roles|json_encode : ''  ) %}
                <td>Adminstrateur</td>
            {% else %}
                <td>Utilisateur</td>
            {% endif %}
        </tr>
        </tbody>
    </table>


    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">
        Modifier
    </a>
    {#<a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>#}

{% endblock %}